{% extends 'base.html.twig' %}

{% block title %}Repair index{% endblock %}

{% block body %}
    <h1>Repair index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Description</th>
                <th>Is_done</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repair in repairs %}
            <tr>
                <td>{{ repair.id }}</td>
                <td>{{ repair.date ? repair.date|date('Y-m-d') : '' }}</td>
                <td>{{ repair.description }}</td>
                <td>{{ repair.isDone ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_repair_show', {'id': repair.id}) }}">show</a>
                    <a href="{{ path('app_repair_edit', {'id': repair.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repair_new') }}">Create new</a>
{% endblock %}
