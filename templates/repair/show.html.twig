{% extends 'base.html.twig' %}

{% block title %}Repair{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/show.css') }}">
{% endblock %}

{% block body %}
    <h1>Repair</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ repair.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ repair.date ? repair.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ repair.description }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ repair.cost }}</td>
            </tr>
            <tr>
                <th>Is_done</th>
                <td>{{ repair.isDone ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="back-btn" href="{{ path('app_repair_index') }}">back to list</a>

    <a class="edit-btn" href="{{ path('app_repair_edit', {'id': repair.id}) }}">edit</a>

    {{ include('repair/_delete_form.html.twig') }}
{% endblock %}
