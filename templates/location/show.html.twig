{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/show.css') }}">
{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Section</th>
                <td>{{ location.section }}</td>
            </tr>
            <tr>
                <th>Shelf</th>
                <td>{{ location.shelf }}</td>
            </tr>
        </tbody>
    </table>

    <a class="back-btn" href="{{ path('app_location_index') }}">back to list</a>

    <a class="edit-btn" href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
