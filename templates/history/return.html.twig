{% extends 'base.html.twig' %}

{% block title %}Return History{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/form.css') }}">
{% endblock %}

{% block body %}
    <h2>Product: {{ history.product.productName }}</h2>
    <h3>History Description: {{ history.description }}</h3>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {{ include('history/_form.html.twig', {'button_label': 'Return'}) }}

    {{ include('history/_delete_form.html.twig') }}

    <a class="back-btn" href="{{ path('app_history_show', {'id': history.id}) }}" class="btn btn-secondary">back to product</a>
{% endblock %}