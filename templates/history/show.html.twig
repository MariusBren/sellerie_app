{% extends 'base.html.twig' %}

{% block title %}History{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/show.css') }}">
{% endblock %}

{% block body %}
    <h1>History</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ history.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td><a href="{{ path('app_product_show', {'id': history.getProduct().getId()}) }}">{{ history.getProduct().getProductName() }}</a></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ history.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ history.startDate ? history.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ history.endDate ? history.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td>{{ history.customer }}</td>
            </tr>
            <tr>
                <th>Is_back</th>
                <td>{{ history.isBack ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {% if history.isBack == false %}
        <a href="{{ path('app_history_return', {'id': history.id })}}">return</a>
    {% endif %}

    <a class="back-btn" href="{{ path('app_history_index') }}">back to list</a>

    <a class="edit-btn" href="{{ path('app_history_edit', {'id': history.id}) }}">edit</a>

    {{ include('history/_delete_form.html.twig') }}
{% endblock %}
